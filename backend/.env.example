# Environment variables for Django portfolio project
# Copy this file to .env and fill in your actual values

# Django Secret Key - Generate a new one for production
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-secret-key-here

# Debug mode - Set to False in production
DEBUG=True

# Allowed hosts - Comma-separated list of domains
# In production, add your actual domain(s)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS allowed origins - Comma-separated list of URLs
# Add your frontend URL(s) here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Database URL (optional - currently using SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Email settings (if using email functionality)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password